<style>
    .bottom {
        margin-bottom: 0rem;
    }
    .adjust-width {
        max-width: 700px;
    }
</style>
<div class="container">
    <div class="modal-dialog modal-dialog-centered adjust-width">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-group bottom">
                    <h5 class="modal-title">System Stats</h5>
                    <h6 class="form-text text-muted">Logged in as: {{ clientname }}</h6>
                </div>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" name="daterange" value = "" placeholder="Select Date and Time" {{did-insert this.onDatePicker}}/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" {{action 'onGetstats' on="click" }}>Refresh</button>
            </div>
        </div>
    </div>
    <br>
    <div class="row justify-content-center align-items-center">
        <div id="cpustats_div" style="width: 100%; height: 350px;"></div>
    </div>        
    <br>
    <div class="row justify-content-center align-items-center">
        <div id="RAM_memory_div" style="width: 100%; height: 350px;"></div>
    </div>
    <br>
</div>